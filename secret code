a = "abcdefghijklmnopqrstuvwxyz"

def encrypt(cleartext):
    cyphertext =""
    for char in cleartext:
        if char in a:
            newpos = (a.find(char) + 13) % 26
            cyphertext += a[newpos]
        else:
            cyphertext += char
    return cyphertext 


cleartext = input("code: ")
cleartext = cleartext.lower()
print(encrypt(cleartext))
